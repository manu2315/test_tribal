<resources>
    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
    </style>

    <style name="Google_sing_in_custom" parent="FirebaseUI.Button.AccountChooser.GoogleButton">
        <item name="drawableStartCompat">@drawable/fui_ic_googleg_color_24dp</item>
        <item name="android:background">@drawable/rounded_corner_button</item>
        <item name="android:textColor">@color/colorPrimaryTextColor</item>
    </style>

    <style name="Buttom_Style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/colorPrimaryTextColor</item>
        <item name="android:background">@drawable/rounded_corner_button</item>
    </style>
    

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="TextView_Numbers">
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextView_Title">
        <item name="android:textColor">@color/colorSecondaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="TextView_User_Name">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/colorSecondaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="TextView_Description">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/colorPrimaryLightColor</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="TextView_Location">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>