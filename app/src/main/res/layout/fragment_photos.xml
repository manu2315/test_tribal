<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="current"
            type="com.example.androidtest.data.datasource.database.entities.UnsplashPhoto_Entity" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:fitsSystemWindows="true">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                app:title="@string/favorite"
                app:subtitle="@{current.user.bio}"
                app:subtitleTextColor="@color/colorPrimaryLightColor"
                app:titleTextColor="@color/colorSecondaryTextColor"
                android:background="@color/colorPrimaryTextColor"
                app:layout_scrollFlags="scroll|enterAlways"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    tools:src="@drawable/ic_add"
                    tools:background="@color/colorPrimary"
                    app:civ_border_width="6dp"
                    app:civ_border_color="@color/colorPrimaryTextColor"
                    />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            tools:context=".presentation.photos.PhotosFragment"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favorites_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                tools:listitem="@layout/item_photo"
                tools:spanCount="3"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <LinearLayout
                android:id="@+id/container_error_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/item_photo_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/photo"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center|bottom"
                    android:src="@drawable/baseline_image_not_supported_black_48"
                    app:tint="@android:color/holo_blue_dark"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/edit_text_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="No pictures to show"
                    android:layout_gravity="center"
                    android:text="@string/no_pictues"
                    style="@style/TextView_Title"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/item_photo_favorite"
                    app:layout_constraintStart_toStartOf="parent"
                    />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
