<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="current"
            type="com.example.androidtest.data.datasource.database.entities.UnsplashPhoto_Entity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.photos.PhotosFragment">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/favorites_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView_User_Name"
            android:paddingStart="20dp"
            android:text="@string/favorite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/favorite"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/favorites_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView_Description"
            android:text="@{current.user.bio}"
            android:paddingStart="20dp"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/favorites_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/favorites_recycler_view"
            app:layout_constraintEnd_toStartOf="@+id/profile_image"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="@string/no_description"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            tools:src="@drawable/ic_add"
            tools:background="@color/colorPrimary"
            app:civ_border_width="6dp"
            android:layout_marginStart="30dp"
            app:civ_border_color="@color/colorPrimaryTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/favorites_recycler_view"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favorites_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            tools:listitem="@layout/item_photo"
            tools:spanCount="3"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:layout_constraintTop_toBottomOf="@id/favorites_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <LinearLayout
            android:id="@+id/container_error_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/favorites_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/item_photo_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/photo"
                android:scaleType="centerCrop"
                android:layout_gravity="center|bottom"
                android:src="@drawable/baseline_image_not_supported_black_48"
                app:tint="@android:color/holo_blue_dark"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/edit_text_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="No pictures to show"
                android:layout_gravity="center"
                android:text="@string/no_pictues"
                style="@style/TextView_Title"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/item_photo_favorite"
                app:layout_constraintStart_toStartOf="parent"
                />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
